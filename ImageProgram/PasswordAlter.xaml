<UserControl x:Class="ImageProgram.PasswordAlter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProgram"
             mc:Ignorable="d" 
              d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Name="alter" Content="변경하기" HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Margin="0,75,0,-15" Height="40" Click="alter_Click"/>
        <Button Name="Btn_back" Content="뒤로 가기" HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Margin="0,135,0,-75" Height="40" Click="Btn_back_Click"/>
        <Label Content="변경할 비밀번호를 입력하세요." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,-86,0,0" Width="180"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="220" Margin="0,-45,0,0" PreviewKeyDown="password_PreviewKeyDown" />
        <TextBlock Name="changedPassword" HorizontalAlignment="Left" Text="변경할 비밀번호를 입력해주세요.(영어숫자만)" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,10,0,0" Width="220" Height="45"/>

    </Grid>
</UserControl>
