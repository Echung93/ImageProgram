<UserControl x:Class="ImageProgram.ImageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProgram"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="gridImage" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image x:Name="img_item" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" />
    </Grid>
</UserControl>
