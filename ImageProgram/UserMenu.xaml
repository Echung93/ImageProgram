        <TextBlock Name="loginUser" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="50,15,0,0" Width="161"/>
        <Button Name="logout" Content="로그아웃" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="50,200,0,0" Height="40"/>

    </Grid>
